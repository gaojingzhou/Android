<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/h_back" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/h_head"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/h_back"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:id="@+id/user_line"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="#00000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:layout_toLeftOf="@+id/user_line"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="Jimmy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_school"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/user_line"
                android:text="中山大学"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/h_back"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:id="@+id/h_line3"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="#00000000"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/h_sex"
                android:src="@drawable/ic_male"
                android:layout_toLeftOf="@+id/h_line3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/h_age"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/h_line3"
                android:text="20"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/item_layout_school"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/i_school"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_item_school"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="@color/gray"
                android:text="我的学校"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_school_arrow"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/item_layout_school"
            android:layout_toRightOf="@+id/item_layout_school"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_right_arrow" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/item_layout_mainpage"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/i_mainpage"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_item_mainpage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="@color/gray"
                android:text="个人主页"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/item_mainpage_arrow"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/item_layout_mainpage"
            android:layout_toRightOf="@+id/item_layout_mainpage"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_right_arrow" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/item_layout_label"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/i_label"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_item_label"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="@color/gray"
                android:text="标签"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_label_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/item_layout_label"
            android:layout_toRightOf="@+id/item_layout_label"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_right_arrow" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/item_layout_setting"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/i_setting"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_item_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="17sp"
                android:textColor="@color/gray"
                android:text="设置"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_setting_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/item_layout_setting"
            android:layout_toRightOf="@+id/item_layout_setting"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_right_arrow" />


    </RelativeLayout>



</LinearLayout>